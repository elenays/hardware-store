extends layout

block content
    div.item
        div.item__container
            div.item__img-container
                div.item__img
        div.item__description-container
            h1.item__caption #{title}
            p.item__article Арктикул: #{article}
            div.item__columns
                div.item__column1
                    p.item__column1-size-text Размер:
                    p.item__column1-size #{size}
                    p.item__column1-color-text Цвет:
                    p.item__column1-color #{color}
                    p.item__column1-description #{description}
                div.item__column2
                    div.item__column2-price-container
                        p.item__column2-text Цена:
                        div.item__column2-discount -20%
                        p.item__column2-price #{price}
                    div.item__column2-delivery-container
                        div.item__column2-delivery
                            div.item__column2-delivery-img1
                            p.item__column2-delivery-text КИН холдинг
                        div.item__column2-delivery
                            div.item__column2-delivery-img2
                            p.item__column2-delivery-text Доставка 2 дня от 100 ₽
                        div.item__column2-delivery
                            div.item__column2-delivery-img3
                            p.item__column2-delivery-text Самовывоз из 3 точек
                        div.item__column2-button
                            div.item__column2-button-img
                            В корзину
