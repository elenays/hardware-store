extends layout

block content
    .item-min__column
        each item in items
            .item-min__container
                img(class='item-min__img', src='../images/#{item.img_min}')
                a(class='item-min__caption', href='goods/#{item._id}') #{item.title}
                .item-min__price #{item.price}
                .item-min__button
                    .item-min__button-img
                    Купить

    .modal
        p.modal__text Ваше имя:
        input(type='text', name='name', class='modal__input', id='name')
        p.modal__text Ваш телефон:
        input(type='text', name='phone', class='modal__input', id='phone')
        input(type='submit', value='Отправить' , class='modal__button-send')
        input(type='button', value='Отмена' , class='modal__button-cancel')
